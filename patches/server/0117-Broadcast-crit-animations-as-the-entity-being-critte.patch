@@ -107,6 +107,7 @@ public class GaleWorldConfiguration extends ConfigurationPart {
         public Fixes fixes;
         public class Fixes extends ConfigurationPart {
             public boolean tripwireDuping = true; // Gale - Leaf - make tripwire duping fix configurable
